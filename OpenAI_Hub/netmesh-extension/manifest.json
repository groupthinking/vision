{
    "manifest_version": 3,
    "name": "NetMesh Vision",
    "version": "1.0",
    "description": "AI Vision Agent for YouTube Growth (VidIQ Killer)",
    "permissions": [
        "sidePanel",
        "tabCapture",
        "scripting",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://*.youtube.com/*",
        "https://customer-worker-1.netmesh.ai/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Open NetMesh Coach",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}