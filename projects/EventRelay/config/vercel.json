{
  "version": 2,
  "name": "youtube-extension-frontend", 
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://youtube-extension-api.fly.dev",
    "REACT_APP_WS_URL": "wss://youtube-extension-api.fly.dev/ws",
    "REACT_APP_MCP_SERVER_URL": "https://youtube-extension-api.fly.dev/mcp"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
