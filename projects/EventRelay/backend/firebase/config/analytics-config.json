{
  "description": "Advanced Analytics Configuration",
  "version": "1.0.0",
  "enabled": true,
  "dataProcessing": {
    "interval": 300000,
    "retentionPeriod": 2592000000,
    "batchSize": 100,
    "compression": true,
    "parallelProcessing": true,
    "maxConcurrency": 4
  },
  "dataSources": {
    "performance": {
      "enabled": true,
      "path": "./monitoring/metrics/",
      "format": "json",
      "updateInterval": 30000,
      "filters": {
        "include": ["*.json"],
        "exclude": ["temp-*"]
      }
    },
    "security": {
      "enabled": true,
      "path": "./reports/security/",
      "format": "json",
      "updateInterval": 3600000,
      "filters": {
        "include": ["*.json"],
        "exclude": []
      }
    },
    "documentation": {
      "enabled": true,
      "path": "./monitoring/metrics/",
      "pattern": "*docs*",
      "format": "json",
      "updateInterval": 60000,
      "filters": {
        "include": ["*.json"],
        "exclude": []
      }
    },
    "project-management": {
      "enabled": false,
      "endpoint": "http://localhost:3001/api/pm/metrics",
      "format": "json",
      "updateInterval": 300000,
      "auth": {
        "type": "bearer",
        "token": "${PM_API_TOKEN}"
      }
    }
  },
  "models": {
    "statistical": {
      "enabled": true,
      "algorithms": ["trend_analysis", "correlation", "regression"],
      "confidenceThreshold": 0.75,
      "predictionHorizon": 30
    },
    "machineLearning": {
      "enabled": false,
      "algorithms": ["neural_network", "random_forest", "svm"],
      "trainingInterval": 86400000,
      "modelPath": "./analytics/models/",
      "hyperparameters": {
        "learningRate": 0.01,
        "epochs": 100,
        "batchSize": 32
      }
    },
    "anomalyDetection": {
      "enabled": true,
      "algorithms": ["isolation_forest", "zscore", "local_outlier_factor"],
      "sensitivity": 0.95,
      "contamination": 0.1,
      "threshold": 2.5
    }
  },
  "dashboards": {
    "autoRefresh": true,
    "refreshInterval": 60000,
    "maxWidgets": 50,
    "layouts": {
      "default": {
        "columns": 4,
        "rows": 3,
        "widgets": [
          {
            "type": "metric",
            "title": "CPU Usage",
            "metric": "performance.cpu.avg",
            "position": { "x": 0, "y": 0, "width": 1, "height": 1 }
          },
          {
            "type": "chart",
            "title": "Response Time Trend",
            "metric": "performance.responseTime.history",
            "chartType": "line",
            "position": { "x": 1, "y": 0, "width": 2, "height": 1 }
          },
          {
            "type": "alerts",
            "title": "Active Alerts",
            "position": { "x": 3, "y": 0, "width": 1, "height": 2 }
          },
          {
            "type": "metric",
            "title": "Error Rate",
            "metric": "performance.errorRate.avg",
            "position": { "x": 0, "y": 1, "width": 1, "height": 1 }
          }
        ]
      }
    }
  },
  "alerting": {
    "enabled": true,
    "rules": {
      "cpu_high": {
        "metric": "performance.cpu.avg",
        "condition": ">",
        "threshold": 80,
        "severity": "warning",
        "cooldown": 300000,
        "message": "CPU usage is high: {value}%"
      },
      "memory_critical": {
        "metric": "performance.memory.avg",
        "condition": ">",
        "threshold": 95,
        "severity": "critical",
        "cooldown": 300000,
        "message": "Memory usage is critical: {value}%"
      },
      "response_time_degraded": {
        "metric": "performance.responseTime.avg",
        "condition": ">",
        "threshold": 2000,
        "severity": "warning",
        "cooldown": 600000,
        "message": "Response time degraded: {value}ms"
      },
      "error_rate_spike": {
        "metric": "performance.errorRate.avg",
        "condition": ">",
        "threshold": 5,
        "severity": "critical",
        "cooldown": 300000,
        "message": "Error rate spike detected: {value}%"
      }
    },
    "channels": {
      "console": {
        "enabled": true,
        "format": "structured",
        "colors": true
      },
      "file": {
        "enabled": true,
        "path": "./monitoring/alerts/analytics-alerts.log",
        "format": "json",
        "rotation": "daily",
        "maxFiles": 30
      },
      "webhook": {
        "enabled": false,
        "url": "https://your-monitoring-service.com/webhook",
        "headers": {
          "Authorization": "Bearer ${ANALYTICS_WEBHOOK_TOKEN}",
          "Content-Type": "application/json"
        },
        "timeout": 5000,
        "retries": 3
      },
      "slack": {
        "enabled": false,
        "webhookUrl": "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK",
        "channel": "#analytics-alerts",
        "username": "Analytics Engine",
        "iconEmoji": ":chart_with_upwards_trend:",
        "templates": {
          "warning": ":warning: *Analytics Warning*\n{message}",
          "critical": ":rotating_light: *Analytics Critical*\n{message}",
          "info": ":information_source: *Analytics Info*\n{message}"
        }
      },
      "email": {
        "enabled": false,
        "smtp": {
          "host": "smtp.gmail.com",
          "port": 587,
          "secure": false,
          "auth": {
            "user": "analytics@yourcompany.com",
            "pass": "${ANALYTICS_EMAIL_PASSWORD}"
          }
        },
        "from": "Analytics Engine <analytics@yourcompany.com>",
        "to": ["devops@yourcompany.com", "management@yourcompany.com"],
        "subjectTemplate": "[{severity}] Analytics Alert: {title}",
        "templates": {
          "html": "./analytics/templates/alert-email.html",
          "text": "./analytics/templates/alert-email.txt"
        }
      }
    }
  },
  "reporting": {
    "enabled": true,
    "schedule": {
      "daily": "0 8 * * *",
      "weekly": "0 8 * * 1",
      "monthly": "0 8 1 * *"
    },
    "formats": ["html", "pdf", "json", "csv"],
    "distribution": {
      "email": ["analytics@yourcompany.com"],
      "slack": "#analytics-reports",
      "dashboard": "https://your-analytics-dashboard.com",
      "s3": {
        "enabled": false,
        "bucket": "your-analytics-reports",
        "region": "us-east-1",
        "path": "reports/"
      }
    },
    "templates": {
      "daily": "./analytics/templates/daily-report.html",
      "weekly": "./analytics/templates/weekly-report.html",
      "monthly": "./analytics/templates/monthly-report.html"
    },
    "retention": {
      "daily": 30,
      "weekly": 52,
      "monthly": 24
    }
  },
  "predictions": {
    "enabled": true,
    "models": {
      "trend": {
        "enabled": true,
        "lookback": 30,
        "forecast": 7,
        "confidence": 0.8
      },
      "seasonal": {
        "enabled": true,
        "period": 7,
        "forecast": 14,
        "confidence": 0.75
      },
      "anomaly": {
        "enabled": true,
        "threshold": 2.5,
        "minDataPoints": 100,
        "retrainInterval": 86400000
      }
    },
    "riskAssessment": {
      "enabled": true,
      "categories": {
        "performance": {
          "weight": 0.3,
          "indicators": ["cpu", "memory", "response_time"],
          "threshold": 0.7
        },
        "security": {
          "weight": 0.4,
          "indicators": ["vulnerabilities", "threats"],
          "threshold": 0.8
        },
        "operational": {
          "weight": 0.3,
          "indicators": ["errors", "availability", "capacity"],
          "threshold": 0.6
        }
      },
      "alertThresholds": {
        "low": 0.6,
        "medium": 0.75,
        "high": 0.85,
        "critical": 0.95
      }
    }
  },
  "storage": {
    "metrics": "./analytics/data/metrics/",
    "models": "./analytics/models/",
    "reports": "./analytics/reports/",
    "cache": "./analytics/cache/",
    "backups": "./analytics/backups/",
    "retention": {
      "metrics": 90,
      "cache": 7,
      "backups": 365
    }
  },
  "cache": {
    "enabled": true,
    "ttl": 300000,
    "maxSize": 1000,
    "strategy": "lru"
  },
  "logging": {
    "level": "info",
    "format": "json",
    "file": "./logs/analytics.log",
    "maxSize": "10m",
    "maxFiles": 5,
    "console": true
  },
  "performance": {
    "optimization": {
      "enabled": true,
      "parallelProcessing": true,
      "memoryLimit": "512mb",
      "cpuLimit": 2
    },
    "monitoring": {
      "enabled": true,
      "metrics": ["processing_time", "memory_usage", "cpu_usage"],
      "alerts": true
    }
  }
}
